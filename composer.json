{
    "name": "smpleader/spt-project",
    "type": "project",
    "description": "The project to use SPT Framework.",
    "keywords": [
        "framework", "spt", "spt-project"
    ],
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/container": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/events": "^8.0",
        "illuminate/routing": "^8.0",
        "illuminate/support": "^8.0",
        "joomla/di": "~1.3",
        "phpmailer/phpmailer": "^6.6.5",
        "smpleader/spt": "^0.6.52",
        "smpleader/spt-boilerplate": "^0.0.7",
        "stripe/stripe-php": "^9.0.0"
    },
    "require-dev": { 
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "php_modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
         
    }
}
